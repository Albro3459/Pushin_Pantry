@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pushin' P(antry)</title>
    <style>
    *{    
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        transition: background-color 0.5s ease;
        color: white;
        background-color: #f0f0f0;
    }
    .navbar {
        display: flex;
        justify-content: center; /* Center navbar items */
        position: fixed;
        top: 0;
        width: 100%;
        background-color: #333;
        z-index: 1000;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2); /* Subtle shadow for depth */
        transition: background-color 0.3s ease;
    }
    .navbar a {
        flex-grow: 1; /* Equal width for each link */
        text-align: center;
        padding: 20px 0; /* Adequate padding for tap targets */
        color: white;
        text-decoration: none;
        transition: color 0.3s ease, background-color 0.3s ease;
    }
        
    .navbar a:hover, .navbar a:focus {
        color: #333;
        background-color: #ddd; /* Highlight on hover/focus */
    }
    
    .homepage {
        background-image: url('images/jason-leung-jWU9FpLW7fI-unsplash.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 32px;
        text-align: center;
        padding: 0 20px;
    }
    .homepage h1 {
        font-size: 48px;
        margin-bottom: 20px;
        color: #000000;
    }
    .homepage p {
        font-size: 24px;
        margin-bottom: 240px;
        color: #000000;
    }
    .about-page {
        background-image: url('images/alexandre-debieve-FO7JIlwjOtU-unsplash.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-end;
        padding: 20px;
    }
    .about-page .container {
        text-align: right;
    }
    .recipes-page {
        background-image: url('images/nathan-dumlao-bRdRUUtbxO0-unsplash.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 24px;
    }
    .recipes-link {
        color: white;
        text-decoration: underline;
        cursor: pointer;
    }
        /* Button Styles */
    .btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .btn:hover {
        background-color: #45a049;
    }
    </style>
</head>
<body>

<div class="navbar">
    <a href="#home">Home</a>
    <a href="#recipes">Recipes Search</a>
    <a href="#about">About Us</a>

</div>

<div id="home" class="homepage" style="color: black; font-family: Georgia, sans-serif; text-align: center;">
    <div class="container">
        <h1 style="font-size: 56px; font-weight: bold;">Welcome to Pushin' P(antry)!</h1>
        <p style="font-size: 30px; font-weight: bold;">Choose your ingredients and get personalized recipes.</p>
    </div>
</div>

<div id="recipes" class="recipes-page">
    <div class="container">
        <h1>Search for Recipes</h1>
        <p>Click <a href="/recipeSearch" target="_blank" class="recipes-link">here</a> to search for recipes.</p>
    </div>
</div>

<div id="about" class="about-page" style="color: white; font-weight: bold; font-family: Arial, sans-serif; text-align: right;">
    <div class="container">
        <h1>The Developers</h1>
        <p>Lillian Beck - Computer Science Student</p>
        <p>Ethan Lancaster - Computer Science Student</p>
        <p>Noah Bourque - Computer Science Student</p>
        <p>Chris Booras - Computer Science Student</p>
        <p>Alex Brodsky - Computer Science Student</p>
    </div>
</div>

</body>
</html>
