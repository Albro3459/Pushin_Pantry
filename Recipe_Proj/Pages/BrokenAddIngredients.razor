    private async Task InitializeSelect2(string elementId, object options)
    {
        string jsCode = $@"
$('#{elementId}').select2({System.Text.Json.JsonSerializer.Serialize(options)});
document.getElementById('{elementId}').addEventListener('change', function (e) {{
// Trigger the change event for Blazor to capture
this.dispatchEvent(new Event('change'));
}});";

        await JS.InvokeVoidAsync("eval", jsCode);
    }

