@page "/ingredients-list"

@using Recipe_Proj.Services
@using Recipe_Proj.DTOs

@inject IRecipeService RecipeService


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pushin' P(antry)</title>
    <style>
    .ingredients-list {
        list-style-type: none;
        padding: 0;
    }
    .ingredients-list li {
        margin-bottom: 0.5em;
    }
    .ingredients-list label {
        margin-left: 0.5em;
    }
    .btn{
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        display: inline-block;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s;
    }
    .btn:hover {
        background-color: #45a049;
    }
    form {
        max-width: 600px;
        margin: auto;
    }
    </style>
</head>

<h1>Ingredients List</h1>
<form>
    <input type="text" @bind="searchKeywords" placeholder="Search for recipes...">
    <ul class="ingredients-list">
        <!-- Your existing list of checkboxes goes here -->
    </ul>
    <button type="button" class="btn" @onclick="SearchRecipes">Search</button>
</form>

@code
{
private List<SimpleRecipeDTO> recipes = new List<SimpleRecipeDTO>();

private string searchKeywords = "";
async Task SearchRecipes() 
{
    
    try 
    {
        // Call the SearchRecipesByKeywords function from the RecipeService
        recipes = await RecipeService.SearchRecipesByKeywords(searchKeywords);

    } 
    catch (Exception ex) 
    {
        Console.WriteLine($"Keyword not found: {ex.Message}");;
    }
}
}

</html>
